@{
    ViewData["Title"] = "Contact";
}

<link href="@Url.Content("~/css/contactpage.css")" rel="stylesheet" type="text/css" />

<h1>@ViewData["Title"]</h1>

    <h2 class="w3-wide w3-center">TALK TO US</h2>
    <p class="w3-opacity w3-center"><i>Have a querie? Tune us in!</i></p>
    <div class="w3-row w3-padding-32">
        <div class="w3-col m6 w3-large w3-margin-bottom">
            <i class="fa fa-map-marker" style="width:30px"></i> Auckland, NZ<br>
            <i class="fa fa-phone" style="width:30px"></i> Phone: 0800 24 33 33<br>
            <i class="fa fa-envelope" style="width:30px"> </i> Email: info@blindlowvision.org.nz<br>
        </div>
        <div class="w3-col m6">
            <form action="/action_page.php" target="_blank">
                <div class="w3-row-padding" style="margin:0 -16px 8px -16px">
                    <div class="w3-half">
                        <input class="w3-input w3-border" type="text" placeholder="Name" required name="Name">
                    </div>
                    <div class="w3-half">
                        <input class="w3-input w3-border" type="text" placeholder="Email" required name="Email">
                    </div>
                </div>
                <input class="w3-input w3-border" type="text" placeholder="Message" required name="Message">
                <button class="w3-button w3-black w3-section w3-right" type="submit">SEND</button>
            </form>
        </div>
    </div>
<style>
    body {
        background-color: lightblue;
    }
</style>