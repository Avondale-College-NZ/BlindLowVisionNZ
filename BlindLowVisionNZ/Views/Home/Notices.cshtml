@{
    ViewData["Title"] = "Notices";
}
<h1>@ViewData["Title"]</h1>

<div class="w3-black" id="tour">
    <div class="w3-container w3-content w3-padding-64" style="max-width:800px">
        <h2 class="w3-wide w3-center">NEWS AND EVENTS</h2>
        <p class="w3-opacity w3-center"><i>Latest Updates</i></p><br>

        <ul class="w3-ul w3-border w3-white w3-text-grey">
            <li class="w3-padding">September <span class="w3-tag w3-grey w3-margin-left">Bikkie Day</span> <span class="w3-badge w3-right w3-margin-right">7</span></li>
            <li class="w3-padding">October <span class="w3-tag w3-grey w3-margin-left">Blind Week</span> <span class="w3-badge w3-right w3-margin-right">28</span></li>
            <li class="w3-padding">November <span class="w3-badge w3-right w3-margin-right">16</span> <span class="w3-tag w3-grey w3-margin-left">Sausage Sizzle</span></li>
        </ul>

        <div class="w3-row-padding w3-padding-32" style="margin:0 -16px">
            <div class="w3-third w3-margin-bottom">
                <img src="~/img/Images/New-Project-2020-10-13T161120.259-1024x443 cropped.jpg" alt="Skydiving" style="width:100%" class="w3-hover-opacity">
                <div class="w3-container w3-white">
                    <p><b>Skydive for free!</b></p>
                    <p class="w3-opacity">Wed 28 Oct 2020</p>
                    <p>Raise $800 to support Blind Low Vision NZ and you’ll get to skydive for free on 5 December (or a date that suits you)!</p>
                    <button class="w3-button w3-black w3-margin-bottom" onclick="document.getElementById('ticketModal').style.display='block'">Learn more</button>
                </div>
            </div>
            <div class="w3-third w3-margin-bottom">
                <img src="~/img/Images/volunteer-photo-1024x443 cropped.jpg" alt="The Team" style="width:100%" class="w3-hover-opacity">
                <div class="w3-container w3-white">
                    <p><b>Welcome to Blind Low Vision NZ</b></p>
                    <p class="w3-opacity">Tue 11 Feb 2020</p>
                    <p>
                        Life without limits<br />Kahore e Mutunga ki te Ora
                    </p>
                    <button class="w3-button w3-black w3-margin-bottom" onclick="document.getElementById('ticketModal').style.display='block'">Learn more</button>
                </div>
            </div>
            <div class="w3-third w3-margin-bottom">
                <img src="~/img/Images/New-Project-10-1024x443 cropped.jpg" alt="The Vision" style="width:100%" class="w3-hover-opacity">
                <div class="w3-container w3-white">
                    <p><b>Our Vision, Your Future</b></p>
                    <p class="w3-opacity">Fri 25 Sep 2020</p>
                    <p>Nā matou te moemoea, nā koutou te tau tītoki</p>
                    <button class="w3-button w3-black w3-margin-bottom" onclick="document.getElementById('ticketModal').style.display='block'">Learn more</button>
                </div>
            </div>
        </div>
    </div>
</div>
